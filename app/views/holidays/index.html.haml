%h1 List of Holidays
%hr
%table.table.table-bordered.table-sm
  %thead
    %tr
      %th{:scope => "col"} Date
      %th{:scope => "col"} Name
      %th{:scope => "col"} Action
  %tbody
    - @holidays.each do |holiday|
      %tr
        %th{:scope => "row"}= holiday.holiday_date.strftime("%d %b %Y")
        %td= holiday.name
        %td
          = link_to "Show", holiday_path(holiday) , class: "btn btn-success btn-sm"
          = link_to "Edit", edit_holiday_path(holiday) , class: "btn btn-info btn-sm"
          = link_to "Delete", holiday_path(holiday) , method: :delete ,data: {confirm: "Are you sure"} , class: "btn btn-danger btn-sm"
= paginate @holidays
